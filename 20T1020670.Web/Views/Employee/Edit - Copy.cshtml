@model _20T1020670.DomainModels.Employee

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post">

            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Họ Tên</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="LastName"
                           name="LastName"
                           value="@Model.LastName"
                           placeholder="" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="FirstName"
                           name="FirstName"
                           value="@Model.FirstName"
                           placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ngày Sinh</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                                <input type="datetime" class="form-control-static " id="BirthDate"
                               name="BirthDate"
                               value="@Model.BirthDate.ToShortDateString()" 
                                     >
                     </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ảnh</label>
                <div class="col-sm-10">
                    <img src="@Model.Photo" class="profile-user-img  img-bordered"
                         alt="Employee Image">
                    <input 
                           type="file"
                           id="Photo"
                           name="Photo"
                           value="@Model.Photo">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email</label>
                <div class="col-sm-10">
                    <input type="email"
                           class="form-control"
                           id="Email"
                           name="Email"
                           value="@Model.Email"
                           placeholder="">
                </div>
            </div>
            @*<div class="form-group">
                <label class="control-label col-sm-2" for="email">Mật Khẩu</label>
                <div class="col-sm-10">
                    <input type="password"
                           class="form-control"
                           id="Password"
                           name="Password"
                           value="@Model.Password"
                           placeholder="">
                </div>
            </div>*@
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ghi Chú</label>
                <div class="col-sm-10">

                    <input type="text" class="form-control" id="Notes" name="Notes" value="@Model.Notes" placeholder="">
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Lưu dữ liệu</button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

