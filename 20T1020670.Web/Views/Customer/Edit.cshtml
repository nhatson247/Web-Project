            <label class="control-label col-sm-2" for="email">Mật khẩu</label>
            <div class="col-sm-10">
                <input type="password"
                       class="form-control"
                       id="Password"
                       name="Password"
                       value="@Model.Password"
                       placeholder="">
            </div>
        </div>*@


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Lưu dữ liệu</button>
                    <a href="~/Customer" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

