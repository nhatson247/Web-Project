@model _20T1020670.DomainModels.Shipper
@{

}


<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">

            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên người giao hàng</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ShipperName"
                           name="ShipperName"
                           value="@Model.ShipperName"
                           placeholder="" autofocus>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">SĐT</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Phone"
                           name="Phone"
                           value="@Model.Phone"
                           placeholder="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Lưu dữ liệu</button>
                    <a href="~/Shipper" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

